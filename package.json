{
  "name": "@amagaki/selective-edit",
  "version": "0.1.0",
  "license": "MIT",
  "homepage": "https://blinkkcode.github.com/selective-edit",
  "description": "Selective structured text editor.",
  "keywords": [
    "structured",
    "document",
    "ui",
    "editor"
  ],
  "bugs": {
    "url": "https://github.com/blinkkcode/selective-edit/issues"
  },
  "main": "dist/src/index.ts",
  "types": "dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blinkkcode/selective-edit.git"
  },
  "directories": {
    "example": "example"
  },
  "engines": {
    "node": ">=12"
  },
  "files": [
    "dist/src",
    "dist/css"
  ],
  "scripts": {
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc && npx gulp compile-sass",
    "copy": "mkdir -p dist/src/static; cp src/static/* dist/src/static",
    "dev": "concurrently \"tsc --watch\" \"npx gulp watch-sass\"",
    "docs": "typedoc --out docs src/",
    "fix": "node ./node_modules/eslint/bin/eslint --fix src/**/*.ts",
    "test": "ava"
  },
  "ava": {
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ]
  },
  "devDependencies": {
    "@types/js-yaml": "^3.12.5",
    "@types/marked": "^1.2.1",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "ava": "^3.14.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.15.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sort-class-members": "^1.9.0",
    "gts": "^2.0.2",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-connect": "^5.7.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "typedoc": "^0.19.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "deep-extend": "^0.6.0",
    "js-yaml": "^3.14.1",
    "json-stable-stringify": "^1.0.1",
    "lit-html": "^1.1.2",
    "marked": "^1.2.6",
    "pell": "^1.0.4"
  }
}
