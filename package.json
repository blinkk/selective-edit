{
  "name": "@blinkk/selective-edit",
  "version": "1.0.0",
  "license": "MIT",
  "homepage": "https://blinkkcode.github.com/selective-edit",
  "description": "Selective structured text editor.",
  "keywords": [
    "structured",
    "document",
    "ui",
    "editor"
  ],
  "bugs": {
    "url": "https://github.com/blinkkcode/selective-edit/issues"
  },
  "main": "dist/src/index.ts",
  "types": "dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blinkkcode/selective-edit.git"
  },
  "directories": {
    "example": "example"
  },
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist/src",
    "dist/css"
  ],
  "scripts": {
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc && npx gulp compile && webpack --config webpack.prod.js",
    "copy": "mkdir -p dist/src/static; cp src/static/* dist/src/static",
    "dev": "concurrently \"npx ava --watch\" \"tsc --watch\"",
    "docs": "typedoc",
    "fix": "node ./node_modules/eslint/bin/eslint --fix src/**/*.ts",
    "serve": "concurrently \"webpack serve --config webpack.dev.js\" \"npx gulp watch\"",
    "test": "ava"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.0",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/lodash.merge": "^4.6.6",
    "@types/marked": "^1.2.1",
    "@types/node": "^14.14.21",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "ava": "^3.14.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.18.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sort-class-members": "^1.9.0",
    "gts": "^3.1.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.16",
    "typescript": "^4.1.3",
    "webpack": "^5.15.0",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "json-stable-stringify": "^1.0.1",
    "lit-html": "^1.3.0",
    "lodash.merge": "^4.6.2"
  }
}
