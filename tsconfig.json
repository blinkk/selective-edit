{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "lib": ["es2017", "dom", "dom.iterable"],
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "target": "es2017",
  },
  "include": [
    "src/**/*.ts",
  ],
  "declaration": true,
  "typedocOptions": {
    "excludeProtected": true,
    "excludeExternals": true,
    "entryPoints": [
      "./src/index.ts",
    ],
    "exclude": [
      "./src/**/*.test.ts",
    ],
  }
}